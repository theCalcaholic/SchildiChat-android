<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SC THEME COLORS -->
    <style name="AppTheme.Base.Senior.Default" parent="AppTheme.Base.Light">
        <!-- Material color: Note: this block should be the same in all theme because it references only common colors and ?riotx attributes -->
        <item name="colorPrimary">@color/accent_senior</item>
        <item name="colorSecondary">@color/accent_senior</item>

        <!-- Keep color accent for legacy widget-->
        <item name="colorAccent">@color/accent_senior</item>

        <item name="materialButtonStyle">@style/VectorButtonStyle.Senior</item>
        <item name="alertDialogTheme">@style/VectorAlertDialogStyleLight.Senior</item>

        <item name="vctr_encrypting_message_text_color">@color/accent_senior</item>

        <!-- icon colors -->
        <item name="vctr_icon_tint_on_light_action_bar_color">@color/accent_senior</item>

        <!-- custom action bar -->
        <item name="android:actionBarStyle">@style/Vector.Styled.ActionBar.Senior</item>
        <item name="actionBarStyle">@style/Vector.Styled.ActionBar.Senior</item>

<!--        <item name="riotx_text_primary">@color/text_color_primary_sc</item>-->
<!--        <item name="riotx_text_secondary">@color/text_color_secondary_sc</item>-->
<!--        <item name="riotx_text_tertiary">@color/text_color_tertiary_sc</item>-->

<!--        <item name="riotx_text_primary_body_contrast">@color/text_color_primary_sc</item>-->
        <item name="sc_message_text_color_outgoing">@android:color/white</item>
        <item name="sc_message_text_color_incoming">@color/riotx_text_primary_light</item>
        <!-- SC additions -->
        <item name="sc_message_bg_incoming">#FFEEEEEE</item>
        <item name="sc_message_bg_outgoing">@color/accent_senior</item>
        <item name="riotx_positive_accent">@color/accent_senior</item>
        <item name="riotx_positive_accent_alpha12">@color/accent_senior_alpha12</item>
        <item name="riotx_toolbar_bg">?riotx_background</item>
        <item name="riotx_unread_unimportant_room_badge">?riotx_header_panel_text_secondary</item>
        <item name="colorAccentPale">@color/accent_senior_pale</item>
        <item name="vectorButtonStyleOutlined">@style/VectorButtonStyleOutlined.Senior</item>

        <item name="bottomSheetDialogTheme">@style/Vector.BottomSheet.Senior.Light</item>

        <item name="riotx_unread_room_badge">?colorAccent</item>

        <!-- Use dark color, to have enough contrast with icons color. windowLightStatusBar is only available in API 23+ -->
        <item name="android:statusBarColor">@color/riotx_header_panel_background_dark</item>
        <!-- Use dark color, to have enough contrast with icons color. windowLightNavigationBar is only available in API 27+ -->
        <item name="android:navigationBarColor">@color/background_black_senior</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify shared element enter and exit transitions -->
        <item name="android:windowSharedElementEnterTransition">@transition/image_preview_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/image_preview_transition</item>

        <item name="riotx_reaction_background_off">@color/riotx_reaction_background_off_light</item>
        <item name="riotx_reaction_background_on">@color/senior_reaction_background_on_light</item>
    </style>

    <!-- Default AppTheme for usage where settings don't apply -->
    <style name="AppTheme.Senior.Default" parent="AppTheme.Base.Senior.Default" />

</resources>
